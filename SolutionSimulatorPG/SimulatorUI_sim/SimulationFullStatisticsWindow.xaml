<Window x:Class="SimulatorUI_sim.SimulationFullStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulatorUI_sim"
        mc:Ignorable="d"
        Title="Simulation information" Height="450" Width="800">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding ClientName}" FontSize="24" FontWeight="Bold" />
                <TextBlock Text="{Binding Country}" FontSize="14" Foreground="#555" Margin="0 0 50 0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="CREATION DATE"  HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding CreationDate, StringFormat={}{0:dd/MM/yyyy} }" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <Separator Grid.Row="1" Margin="0,0,0,15"/>

        <UniformGrid Grid.Row="2" Columns="7"  Margin="0,0,0,20">
            <UniformGrid.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                </Style>
            </UniformGrid.Resources>

            <StackPanel Margin="0,0,10,10" >
                <TextBlock Text="AGE RANGE" />
                <TextBlock>
                    <Run Text="{Binding MinAge}"  />
                    <Run Text=" - " Foreground="Gray"/>
                    <Run Text="{Binding MaxAge}" />
                </TextBlock>
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="AVG AGE" />
                <TextBlock Text="{Binding AverageAgeOriginal}" />
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="AVG AGE (NOW)"/>
                <TextBlock Text="{Binding AverageAgeNow}" />
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="AMOUNT CLIENTS" />
                <TextBlock Text="{Binding AmountOfCust}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="MAX HOUSE NR" />
                <TextBlock Text="{Binding MaxHouseNr}" />
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="HOUSENR letter%"/>
                <TextBlock Text="{Binding HouseNumberLetterPercentage, StringFormat={}{0}%}" />
            </StackPanel>

            <StackPanel Margin="0,0,10,10">
                <TextBlock Text="RANDOM SEED" />
                <TextBlock Text="{Binding RandomSeed}"/>
            </StackPanel>
        </UniformGrid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="AliceBlue" BorderThickness="5" CornerRadius="4" Margin="5,0,5,0" Padding="0">
                <DataGrid ItemsSource="{Binding MunicipalityPerc}" AutoGenerateColumns="False"   IsReadOnly="True" 
               HeadersVisibility="Column" GridLinesVisibility="Horizontal" BorderThickness="0" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Municipality " Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="%" Binding="{Binding Value}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="1" BorderBrush="AliceBlue" BorderThickness="5" CornerRadius="4" Margin="5,0,5,0" Padding="0">
                <DataGrid ItemsSource="{Binding StreetsPerMunicipality}" AutoGenerateColumns="False"   IsReadOnly="True" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" BorderThickness="0" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Municipality " Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Streets" Binding="{Binding Value}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="2" BorderBrush="AliceBlue" BorderThickness="5" CornerRadius="4" Margin="5,0,0,0" Padding="0">
                <DataGrid ItemsSource="{Binding ClientsPerMunicipality}" AutoGenerateColumns="False" IsReadOnly="True" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Municipality " Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Clients" Binding="{Binding Value}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        <Button Grid.Row="4" Grid.Column="0" Content="Export" Margin="5 5 5 -5" Click="Click_buttonExport"></Button>
    </Grid>
</Window>
